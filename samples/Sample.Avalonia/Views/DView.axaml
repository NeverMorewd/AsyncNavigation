<UserControl
    x:Class="Sample.Avalonia.Views.DView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:an="https://github.com/NeverMorewd/AsyncNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
            <Button
                Classes="Navigation"
                Content="ToA"
                Tag="AView" />
            <Button
                Classes="Navigation"
                Content="ToB"
                Tag="BView" />
            <Button
                Classes="Navigation"
                Content="ToA:New"
                Tag="AView:New" />
        </StackPanel>
        <ScrollViewer>
            <TabControl an:RegionManager.RegionName="TabRegion" TabStripPlacement="Top">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <TextBlock VerticalAlignment="Center" Text="{Binding ViewName}" />
                            <Button Content="x" />
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
