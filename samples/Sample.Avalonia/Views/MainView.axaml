<UserControl
    x:Class="Sample.Avalonia.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:an="https://github.com/NeverMorewd/AsyncNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Sample.Common;assembly=Sample.Common"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <SplitView
        DisplayMode="CompactInline"
        IsPaneOpen="{Binding IsSplitViewPaneOpen}"
        OpenPaneLength="310"
        PanePlacement="Right">
        <SplitView.Pane>
            <DockPanel>
                <ToggleButton
					ZIndex="99"
                    Classes="Switch"
                    DockPanel.Dock="Top"
					Width="45"
					HorizontalContentAlignment="Center"
                    IsChecked="{Binding IsSplitViewPaneOpen}" />
                <StackPanel Classes="Navigation" IsVisible="{Binding IsSplitViewPaneOpen}">
                    <Button
                        Classes="Navigation"
                        Content="ToA"
                        Tag="AView" />
					<Button
					   Classes="NavigationWithDelay"
					   Content="ToE:Delay"
					   Tag="EView" />
                    <Button
                        Classes="Navigation"
                        Content="ToB:ItemsRegion;Delay"
                        Tag="BView" />
                    <Button
                        Classes="Navigation"
                        Content="ToC:ChildContentRegion"
                        Tag="CView" />
                    <Button
                        Classes="Navigation"
                        Content="ToD:TabRegion"
                        Tag="DView" />
                    <Button
                        Classes="NavigationWithoutWait"
                        Content="ToA:NOWait"
                        Tag="AView" />
                    <Button
                        Classes="NavigationWithoutWait"
                        Content="ToB:NOWait"
                        Tag="BView" />
                    <Button
                        Classes="Navigation"
                        Content="ToA:New"
                        Tag="AView:New" />
                    <Button
                        Classes="Navigation"
                        Content="ToB:Error"
                        Tag="BView:Error" />
					<Button
					   Classes="DialogShow"
					   Content="ToA:Dialog.Show"
					   Tag="AView" />
					<Button
					   Classes="DialogShow"
					   Content="ToE:Dialog.Show"
					   Tag="EView" />
					<Button
					   Classes="DialogShowDialog"
					   Content="ToA:Dialog.ShowDialog"
					   Tag="AView" />
					<Button
					   Classes="DialogShowDialogAsync"
					   Content="ToE:Dialog.ShowDialog"
					   Tag="EView" />
					<Button
					   Classes="DialogShowDialogAsyncWithCancelling"
					   Content="ToA:Dialog.ShowDialogWithCancelling"
					   Tag="AView" />
                </StackPanel>
            </DockPanel>
        </SplitView.Pane>

        <DockPanel>
            <ContentControl an:RegionManager.RegionName="MainRegion" />
        </DockPanel>
    </SplitView>
</UserControl>
