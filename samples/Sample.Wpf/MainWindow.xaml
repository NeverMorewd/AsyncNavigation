<Window
    x:Class="Sample.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:an="https://github.com/NeverMorewd/AsyncNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid RowDefinitions="*,30">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Right">
                <StackPanel
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label VerticalAlignment="Center" Content="Search:" />
                    <ComboBox
                        Name="SearchBox"
                        Width="245"
                        Height="35"
                        Margin="3,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding Views}"
                        SelectedItem="{Binding SelectedView}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource GoBack}" />
                    <Button Style="{StaticResource GoForward}" />
                </StackPanel>
                <Button
                    Content="ToA"
                    Style="{StaticResource NavigationButton}"
                    Tag="AView" />
                <Button
                    Content="ToE"
                    Style="{StaticResource NavigationButton}"
                    Tag="EView" />
                <Button
                    Content="ToE:Delay"
                    Style="{StaticResource NavigationButton}"
                    Tag="EView:Delay" />
                <Button
                    Content="ToA:New"
                    Style="{StaticResource NavigationButton}"
                    Tag="AView:New" />
                <Button
                    Content="ToE:Error"
                    Style="{StaticResource NavigationButton}"
                    Tag="EView:Error" />
                <Button
                    Content="ToA:Forget;New"
                    Style="{StaticResource NavigationAndForget}"
                    Tag="AView:New" />
                <Button
                    Content="ToE:Forget;Delay"
                    Style="{StaticResource NavigationAndForget}"
                    Tag="EView:Delay" />
                <Button
                    Content="ToB:ItemsRegion"
                    Style="{StaticResource NavigationButton}"
                    Tag="BView" />
                <Button
                    Content="ToD:TabRegion"
                    Style="{StaticResource NavigationButton}"
                    Tag="DView" />
                <Button
                    Content="ToC:ChildContentRegion"
                    Style="{StaticResource NavigationButton}"
                    Tag="CView" />
                <Button
                    Content="ToListBoxRegionView"
                    Style="{StaticResource NavigationButton}"
                    Tag="ListBoxRegionView" />
                <Button
                    Content="ToA:Dialog.Show"
                    Style="{StaticResource DialogShow}"
                    Tag="AView" />
                <Button
                    Content="ToE:Dialog.Show"
                    Style="{StaticResource DialogShow}"
                    Tag="EView" />
                <Button
                    Content="ToA:Dialog.ShowDialog"
                    Style="{StaticResource DialogShowDialog}"
                    Tag="AView" />
                <Button
                    Content="ToE:Dialog.AsyncShowDialog"
                    Style="{StaticResource DialogShowDialogAsync}"
                    Tag="EView" />
                <Button
                    Content="ToA:Dialog.ShowDialogWithCancelling"
                    Style="{StaticResource DialogShowDialogAsyncWithCancelling}"
                    Tag="AView" />
                <Button
                    Content="ToA:Window.Show"
                    Style="{StaticResource WindowShow}"
                    Tag="AWindow" />
                <Button
                    Command="{Binding CollectCommand}"
                    Content="Collect"
                    Tag="" />
            </StackPanel>
            <ContentControl an:RegionManager.RegionName="MainRegion" />
        </DockPanel>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FooterText}" />
    </Grid>
</Window>
