<UserControl
    x:Class="Sample.Wpf.Views.CView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:an="https://github.com/NeverMorewd/AsyncNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border
            HorizontalAlignment="Stretch"
            Background="GreenYellow"
            BorderBrush="BurlyWood"
            BorderThickness="1"
            DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
                <TextBlock>
                    InstanceNumber:<Run
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="Tomato"
                        Text="{Binding InstanceNumber, Mode=OneWay}" />
                </TextBlock>
                <Button Style="{StaticResource UnloadView}" />
                <Button Style="{StaticResource CloseDialog}" />
            </StackPanel>
        </Border>
        <StackPanel Orientation="Vertical">
            <Button
                Content="ToA"
                Style="{StaticResource NavigationButton}"
                Tag="AView" />
            <Button
                Content="ToE"
                Style="{StaticResource NavigationButton}"
                Tag="EView" />
            <Button
                Content="ToC"
                Style="{StaticResource NavigationButton}"
                Tag="CView" />
        </StackPanel>
        <ContentControl an:RegionManager.RegionName="ChildContentRegion" />
    </DockPanel>
</UserControl>
