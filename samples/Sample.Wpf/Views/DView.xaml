<UserControl
    x:Class="Sample.Wpf.Views.DView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:an="https://github.com/NeverMorewd/AsyncNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource GoBack}" />
                <Button Style="{StaticResource GoForward}" />
            </StackPanel>
            <Button
                Content="ToA"
                Style="{StaticResource NavigationButton}"
                Tag="AView" />
            <Button
                Content="ToE"
                Style="{StaticResource NavigationButton}"
                Tag="EView" />
            <Button
                Content="ToE:Delay"
                Style="{StaticResource NavigationButton}"
                Tag="EView:Delay" />
            <Button
                Content="ToA:New"
                Style="{StaticResource NavigationButton}"
                Tag="AView:New" />
            <Button
                Content="ToE:New;Delay"
                Style="{StaticResource NavigationButton}"
                Tag="EView:New;Delay" />
            <Button
                Content="ToA:Forget"
                Style="{StaticResource NavigationAndForget}"
                Tag="AView" />
            <Button
                Content="ToA:Forget;New"
                Style="{StaticResource NavigationAndForget}"
                Tag="AView:New" />
        </StackPanel>
        <ScrollViewer>
            <TabControl
                x:Name="tab"
                an:RegionManager.PreferCache="True"
                an:RegionManager.RegionName="TabRegion"
                TabStripPlacement="Top">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="2" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{Binding ViewName}" />
                            <Button
                                Margin="10"
                                Command="{Binding DataContext.RequestUnloadViewCommand, ElementName=tab}"
                                CommandParameter="{Binding}"
                                Content="x" />
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
