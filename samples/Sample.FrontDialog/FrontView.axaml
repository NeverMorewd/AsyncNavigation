<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sample.FrontDialog.FrontView">

   <DockPanel LastChildFill="True">
       <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top">I am a FrontDialog</TextBlock>
       <ProgressBar VerticalAlignment="Center" DockPanel.Dock="Top" ShowProgressText="True" Value="{Binding Ratio}"></ProgressBar>
       <Button VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               Content="Close" 
               Command="{Binding CloseDialogCommand}">
       </Button>
   </DockPanel>

</UserControl>
